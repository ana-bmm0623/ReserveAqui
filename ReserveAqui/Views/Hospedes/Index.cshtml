@model IEnumerable<ReserveAqui.Models.Hospede>

@{
    ViewBag.Title = "Lista de Hóspedes";
}

<h2>Lista de Hóspedes</h2>

<!-- Mensagens de feedback -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<!-- Botão de adicionar novo hóspede -->
<p>
    @Html.ActionLink("Adicionar Novo Hóspede", "Create", null, new { @class = "btn btn-primary" })
</p>

<!-- Filtro de busca -->
<form method="get" action="@Url.Action("Index")" class="form-inline mb-3">
    <div class="form-group">
        <label for="search" class="mr-2">Buscar Hóspede:</label>
        <input type="text" name="search" class="form-control" placeholder="Nome ou CPF" />
    </div>
    <button type="submit" class="btn btn-outline-primary ml-2">Buscar</button>
</form>

<!-- Tabela de hóspedes -->
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.NomeCompleto)</th>
            <th>@Html.DisplayNameFor(model => model.CPF)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Telefone)</th>
            <th>@Html.DisplayNameFor(model => model.Endereco)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.NomeCompleto)</td>
                <td>@Html.DisplayFor(modelItem => item.CPF)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Telefone)</td>
                <td>@Html.DisplayFor(modelItem => item.Endereco)</td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" })
                    @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" })
                    @Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    @Html.ActionLink("Voltar ao Início", "Index", "Home", new { @class = "btn btn-default" })
</div>
