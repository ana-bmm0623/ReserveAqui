@{
    ViewBag.Title = "Confirmação de E-mail";
}

<main aria-labelledby="title">
    <h2 id="title">@ViewBag.Title</h2>
    <div>
        <p>Obrigado por confirmar seu e-mail! Você agora pode fazer logon.</p>
        <p>@Html.ActionLink("Clique aqui para entrar", "Login", "Account", new { id = "loginLink" }, new { @class = "btn btn-primary" })</p>
    </div>
</main>
