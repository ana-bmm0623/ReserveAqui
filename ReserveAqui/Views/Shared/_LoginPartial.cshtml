<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ReserveAqui Hotel</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    @Styles.Render("~/Content/css")
    <style>
        /* Paleta de Cores */
        :root {
            --primary-color: #99b898;
            --secondary-color: #fecea8;
            --accent-color: #2a363b;
            --highlight-color: #e84a5f;
            --background-color: #ff847c;
            --white: #ffffff;
        }

        /* Estilos Globais */
        body, html {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        /* Navbar */
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px;
            background-color: var(--accent-color);
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

            .navbar .brand {
                font-size: 1.5rem;
                font-weight: bold;
                color: var(--white);
                text-decoration: none;
            }

            .navbar ul {
                list-style: none;
                display: flex;
                gap: 20px;
                margin: 0;
            }

                .navbar ul li a {
                    text-decoration: none;
                    color: var(--white);
                    font-weight: bold;
                }

                    .navbar ul li a:hover {
                        color: var(--highlight-color);
                    }

            .navbar .btn {
                padding: 10px 20px;
                border-radius: 4px;
                text-decoration: none;
            }

            .navbar .btn-primary {
                background-color: var(--highlight-color);
                color: var(--white);
            }

                .navbar .btn-primary:hover {
                    background-color: var(--secondary-color);
                    color: var(--accent-color);
                }

            .navbar .btn-secondary {
                background-color: var(--primary-color);
                color: var(--accent-color);
            }

                .navbar .btn-secondary:hover {
                    background-color: var(--secondary-color);
                    color: var(--accent-color);
                }
    </style>
</head>
<body>
    <nav class="navbar">
        <a href="@Url.Action("Index", "Home")" class="brand">ReserveAqui</a>
        <ul>
            <li><a href="@Url.Action("Index", "Home")"><i class="fas fa-home"></i> Página Inicial</a></li>
            <li><a href="@Url.Action("About", "Home")"><i class="fas fa-info-circle"></i> Sobre Nós</a></li>
            <li><a href="@Url.Action("Contact", "Home")"><i class="fas fa-envelope"></i> Contato</a></li>

            @if (User.IsInRole("Admin"))
            {
                <li><a href="@Url.Action("Create", "Hotels")">Adicionar Hotel</a></li>
                <li><a href="@Url.Action("Create", "Quartos")">Adicionar Quarto</a></li>
                <li><a href="@Url.Action("Create", "ServicosAdicionais")">Adicionar Serviço</a></li>
            }
        </ul>

        <div>
            @if (User.Identity.IsAuthenticated)
            {
                <a href="@Url.Action("Create", "Reservations")" class="btn btn-primary">Reservar Agora</a>
            }
            else
            {
                <a href="@Url.Action("Login", "Account")" class="btn btn-secondary">Faça Login para Reservar</a>
            }
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ReserveAqui Hotel</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
