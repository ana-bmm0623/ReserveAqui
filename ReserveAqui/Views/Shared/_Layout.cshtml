<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ReserveAqui Hotel</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <nav class="navbar">
        <a href="@Url.Action("Index", "Home")" class="brand">ReserveAqui</a>

        <ul class="navbar-center">
            <li><a href="@Url.Action("Index", "Home")"><i class="fas fa-home"></i> Página Inicial</a></li>
            <li><a href="@Url.Action("About", "Home")"><i class="fas fa-info-circle"></i> Sobre Nós</a></li>
            <li><a href="@Url.Action("Contact", "Home")"><i class="fas fa-envelope"></i> Contato</a></li>
        </ul>

        <div class="navbar-right">
            @if (User.Identity.IsAuthenticated)
            {
                <span class="user-info">Olá, @User.Identity.Name!</span>
                <a href="@Url.Action("Index", "Hotels")" class="btn btn-primary">Hotéis</a>

                if (User.IsInRole("Admin"))
                {
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown">
                            Administração
                        </button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="@Url.Action("ManageHotels", "Admin")">Gerenciar Hotéis</a>
                            <a class="dropdown-item" href="@Url.Action("ManageRooms", "Admin")">Gerenciar Quartos</a>
                            <a class="dropdown-item" href="@Url.Action("ManageGuests", "Admin")">Gerenciar Hóspedes</a>
                            <a class="dropdown-item" href="@Url.Action("ManageServices", "Admin")">Gerenciar Serviços Adicionais</a>
                            <a class="dropdown-item" href="@Url.Action("ManageReservations", "Admin")">Gerenciar Reservas</a>
                        </div>
                    </div>
                }
                using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                {
                    @Html.AntiForgeryToken()
                    <button type="submit" class="booking-button" style="border: none;">Logoff</button>
                }
            }
            else
            {
                <a href="@Url.Action("Register", "Account")" class="btn btn-secondary">Registrar-se</a>
                <a href="@Url.Action("Login", "Account")" class="btn btn-primary">Logar</a>
            }
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ReserveAqui Hotel</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
