<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ReserveAqui Hotel</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    @Styles.Render("~/Content/css")
    <style>
        /* Paleta de Cores */
        :root {
            --primary-color: #99b898;
            --secondary-color: #fecea8;
            --accent-color: #2a363b; /* Azul escuro para o menu */
            --highlight-color: #e84a5f;
            --background-color: #ff847c;
            --white: #ffffff;
        }

        /* Estilos Globais */
        body, html {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        /* Navbar */
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px;
            background-color: var(--accent-color); /* Azul escuro para o fundo do menu */
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

            .navbar .brand {
                font-size: 1.5rem;
                font-weight: bold;
                color: var(--white);
                text-decoration: none;
            }

            .navbar ul {
                list-style: none;
                display: flex;
                gap: 20px;
                margin: 0;
            }

                .navbar ul li a {
                    text-decoration: none;
                    color: var(--white); /* Texto branco para contraste */
                    font-weight: bold;
                }

                    .navbar ul li a:hover {
                        color: var(--highlight-color); /* Cor de destaque no hover */
                    }

            .navbar .booking-button {
                background-color: var(--highlight-color);
                color: var(--white);
                padding: 10px 20px;
                text-decoration: none;
                border-radius: 4px;
            }

                .navbar .booking-button:hover {
                    background-color: var(--secondary-color);
                    color: var(--accent-color);
                }
    </style>
</head>
<body>
    <nav class="navbar">
        <a href="@Url.Action("Index", "Home")" class="brand">ReserveAqui</a>
        <ul>
            <li><a href="@Url.Action("Index", "Home")"><i class="fas fa-home"></i> Página Inicial</a></li>
            <li><a href="@Url.Action("About", "Home")"><i class="fas fa-info-circle"></i> Sobre Nós</a></li>
            <li><a href="@Url.Action("Contact", "Home")"><i class="fas fa-envelope"></i> Contato</a></li>
            @if (User.Identity.IsAuthenticated)
            {
                <li><a href="@Url.Action("Index", "Hotels")"><i class="fas fa-bed"></i> Reservar Quarto</a></li>
            }
        </ul>
        @if (User.Identity.IsAuthenticated)
        {
            <span class="navbar-text" style="color: var(--white);">Olá, @User.Identity.Name!</span>
            {
                using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                {
                    @Html.AntiForgeryToken()
                    <button type="submit" class="booking-button" style="border: none;">Logoff</button>
                }
            }
        }
        else
        {
            <a href="@Url.Action("Login", "Account")" class="booking-button">Logon</a>
        }
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ReserveAqui Hotel</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
