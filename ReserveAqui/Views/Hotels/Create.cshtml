@model ReserveAqui.Models.Hotel

@{
    ViewBag.Title = "Criar Novo Hotel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Criar Novo Hotel</h2>

@using (Html.BeginForm("Create", "Hotels", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Detalhes do Hotel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", placeholder = "Nome do hotel" } })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Endereço)
            @Html.EditorFor(model => model.Endereço, new { htmlAttributes = new { @class = "form-control", placeholder = "Endereço do hotel" } })
            @Html.ValidationMessageFor(model => model.Endereço, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email)
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email de contato" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Telefone)
            @Html.EditorFor(model => model.Telefone, new { htmlAttributes = new { @class = "form-control", placeholder = "Telefone de contato" } })
            @Html.ValidationMessageFor(model => model.Telefone, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Descricao)
            @Html.TextAreaFor(model => model.Descricao, new { @class = "form-control", placeholder = "Descrição do hotel", rows = 4 })
            @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="ImagemUrl">Imagem do Hotel</label>
            <input type="file" name="ImagemUrl" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Criar Hotel</button>
    </div>
}

<div>
    @Html.ActionLink("Voltar para Lista", "Index", null, new { @class = "btn btn-default" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
