@model ReserveAqui.Models.ServicoAdicional

@{
    ViewBag.Title = "Excluir Serviço Adicional";
}

<h2>@ViewBag.Title</h2>

<div class="alert alert-warning">
    Tem certeza de que deseja excluir o serviço adicional abaixo?
</div>

<dl class="dl-horizontal">
    <dt>@Html.DisplayNameFor(model => model.Nome)</dt>
    <dd>@Html.DisplayFor(model => model.Nome)</dd>

    <dt>@Html.DisplayNameFor(model => model.Descricao)</dt>
    <dd>@Html.DisplayFor(model => model.Descricao)</dd>

    <dt>@Html.DisplayNameFor(model => model.Valor)</dt>
    <dd>@Html.DisplayFor(model => model.Valor)</dd>
</dl>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Excluir</button>
    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary" })
}
